                                                        telerikMauiControls:RadDockLayout.Dock="Right"
                                                        AutomationId="RadComboBoxClearButton" />
                <ContentView x:Name="PART_InputParent"
                             BackgroundColor="Transparent">
                    <telerikMauiControls:RadTextInput x:Name="PART_Input"
