<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:telerikMaui="clr-namespace:Telerik.Maui;assembly=Telerik.Maui.Core"
                    xmlns:telerikMauiControls="clr-namespace:Telerik.Maui.Controls;assembly=Telerik.Maui.Controls"
                    xmlns:telerikSkeleton="clr-namespace:Telerik.Maui.Controls.Skeleton;assembly=Telerik.Maui.Controls"
                    x:Class="Telerik.Theming.Telerik.Styles.Skeleton">

    <!-- This is autogenerated file. Use as reference. Do not modify. -->
    <telerikMauiControls:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />

    <Style x:Key="SkeletonBorderStyle" TargetType="telerikMauiControls:RadBorder">
        <Setter Property="BackgroundColor" Value="{TemplateBinding BackgroundColor}" />
        <Setter Property="Background" Value="{TemplateBinding Background}" />
        <Setter Property="BorderColor" Value="{TemplateBinding BorderColor}" />
        <Setter Property="BorderBrush" Value="{TemplateBinding BorderBrush}" />
        <Setter Property="BorderThickness" Value="{TemplateBinding BorderThickness}" />
        <Setter Property="CornerRadius" Value="{TemplateBinding CornerRadius}" />
        <Setter Property="Padding" Value="{TemplateBinding ContentPadding}" />
    </Style>

    <ControlTemplate x:Key="RadSkeletonControlTemplate">
        <telerikMauiControls:RadBorder Style="{StaticResource SkeletonBorderStyle}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}" 
                                  IsVisible="{TemplateBinding IsLoading, Converter={StaticResource InvertedBooleanConverter}}" />
                <GraphicsView x:Name="PART_SkeletonLoadingView"
                              IsVisible="{TemplateBinding IsLoading}" 
                              Drawable="{TemplateBinding LoadingViewDrawable}"
                              MinimumHeightRequest="{TemplateBinding LoadingViewMinimumHeight}"
                              MinimumWidthRequest="{TemplateBinding LoadingViewMinimumWidth}" />
                <telerikSkeleton:SkeletonCustomView x:Name="PART_SkeletonCustomView"
                                                    ContentTemplate="{TemplateBinding LoadingViewTemplate}"
                                                    InputTransparent="True"
                                                    Opacity="0"
                                                    IsVisible="False" />
            </Grid>
        </telerikMauiControls:RadBorder>
    </ControlTemplate>

    <Style x:Key="RadSkeletonStyle" TargetType="telerikMauiControls:RadSkeleton">
        <Setter Property="ControlTemplate" Value="{StaticResource RadSkeletonControlTemplate}" />
        <Setter Property="LoadingViewColor" Value="{DynamicResource RadOnAppSurfaceColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource RadAppSurfaceColor}" />
        <Setter Property="BorderColor" Value="{DynamicResource RadBorderColor}" />
        <Setter Property="CornerRadius" Value="{OnPlatform Default=10, Android=4, WinUI=0}" />
    </Style>
    <Style TargetType="telerikMauiControls:RadSkeleton" BasedOn="{StaticResource RadSkeletonStyle}" />
</ResourceDictionary>